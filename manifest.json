{
  "manifest_version": 3,
  "name": "GitHub PR Comment Copier",
  "version": "1.0.0",
  "description": "Copy GitHub PR comments in AI-friendly format",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["src/content.ts"]
    }
  ]
}
